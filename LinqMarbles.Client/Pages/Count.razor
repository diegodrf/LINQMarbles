@attribute [Route(RouteConstant.Count)]
<PageTitle>LINQ Marbles - Count</PageTitle>

<PageContainer OperatorText="Count(n => n > 2)">
    <InputPanel>
        @foreach (var marble in _marbles)
        {
            <Marble Color="marble.Color"
                    Close="@(() => _marbles.Remove(marble))">
                @marble.Number
            </Marble>
        }
        <AddMarble DefaultContent="5" OnAdd="AddNumber" T="int" />
    </InputPanel>
    <OutputPanel>
        <MudText Typo="Typo.h4">@_marbles.Count(n => n.Number > 2)</MudText>
    </OutputPanel>
</PageContainer>

@code {
    private readonly List<MarbleNumberModel> _marbles = new()
    {
        new(1),
        new(2), 
        new(3), 
        new(4)
    };

    private void AddNumber(int number)
    {
        _marbles.Add(new MarbleNumberModel(number));
    }
}
