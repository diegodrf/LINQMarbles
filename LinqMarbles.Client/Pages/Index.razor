@page "/"
@page "/{GroupName}"

<MudGrid Spacing="3" Justify="Justify.Center">
    @foreach (var route in _routeList)
    {
        <MudItem xs=6>
            <MudCard>
                <MudCardContent>
                    <MudText>@route.GetPathTitle()</MudText>
                    <MudText Typo="Typo.body2">The quick, brown fox jumps over a lazy dog.</MudText>
                </MudCardContent>
                <MudCardActions>
                    <MudButton Href="@route.ToLower()" Variant="Variant.Text" Color="Color.Primary">Learn More</MudButton>
                </MudCardActions>
            </MudCard>
        </MudItem>
    }
</MudGrid>

@code {

    [Parameter] 
    public string? GroupName { get; set; }

    private List<string> _routeList = new List<string>();

    protected override void OnInitialized()
    {
        _routeList = GroupName is null ? 
            RouteConstant.NavGroups.Keys.ToList() : 
            RouteConstant.GetAllRoutes()
                .Where(x => x.Contains(GroupName.ToLower()))
                .ToList();
        
        base.OnInitialized();
    }

}